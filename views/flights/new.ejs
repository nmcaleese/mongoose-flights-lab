<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    </select>
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS - Austin, TX</option>
    <option value="DFW">DFW - Dallas Ft. Worth, TX</option>
    <option value="DEN">DEN - Denver, CO</option>
    <option value="LAX">LAX - Los Angeles, CA</option>
    <option value="SAN">SAN - San Francisco, CA</option>
    </select>
  <label>Flight Number:</label>
  <input type="text" name="flightNo">
  <label>Departs:</label>
  <input type="datetime-local" name="departs">
  <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>